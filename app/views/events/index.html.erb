<p style="color: green"><%= notice %></p>

<div class="container">

    <h1>Private Events</h1>
  
    <div id="events">
      <% @events.each do |event| %>
        <%= render event %>
        <p>
          <%= link_to "Show this event", event %>
        </p>
      <% end %>
    </div>
  
    <%= link_to "New event", new_event_path %>

</div>