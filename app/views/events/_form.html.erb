<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :event_title, class:"label" %>
    <div class="control">
      <%= form.text_field :event_title, class:"input" %>
    </div> 
  </div>

  <div class="field">
    <%= form.label :event_description, class:"label" %>
    <div class="control">
      <%= form.rich_text_area :event_description, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :event_date, class:"label" %>
    <div class="control">
      <%= form.datetime_field :event_date, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :event_location, class:"label" %>
    <div class="control">
      <%= form.text_field :event_location, class:"input" %>
    </div>
  </div>

  <br/>

  <div>
    <%= form.submit class: "button is-primary" %>
  </div>

  <br/>

  <div class="field is-grouped">
    <p class="control">
      <%= link_to "Cancel", events_path, class: "button is-dark" %>
    </p>
  </div>

<% end %>
