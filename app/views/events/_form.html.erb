<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :event_title, style: "display: block" %>
    <%= form.text_field :event_title %>
  </div>

  <div>
    <%= form.label :event_description, style: "display: block" %>
    <%= form.rich_text_area :event_description %>
  </div>

  <div>
    <%= form.label :event_date, style: "display: block" %>
    <%= form.datetime_field :event_date %>
  </div>

  <div>
    <%= form.label :event_location, style: "display: block" %>
    <%= form.text_field :event_location %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
