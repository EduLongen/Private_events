    <div class="navbar-end">
      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          <%= current_user.name %>
        </a>
        <div class="navbar-dropdown">
          <a class="navbar-item">
            <%= link_to "Something Else", events_path, class: "navbar-item" %>
          </a>
