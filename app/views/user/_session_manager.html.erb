<% if current_user %>
  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-end">
      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          <%= current_user.name %>
        </a>
        <div class="navbar-dropdown is-right">
          <div class="navbar-item is-centered">
            <%= link_to "Edit User", edit_user_registration_path, class: "button is-light" %>
          </div>
          <hr class="dropdown-divider" > 
          <div class="navbar-item is-centered">
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "button is-dark" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% elsif %>
  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-end">
      <div class="buttons">
        <a> <%= link_to "Sign In", new_user_session_path, class: "button is-primary" %> </a>
        <a> <%= link_to "Sign Up", new_user_registration_path, class: "button is-light" %> </a>
      </div>
    </div>
  </div>
<% end %>